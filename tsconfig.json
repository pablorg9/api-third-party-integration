{
    "compilerOptions": {
        "lib": ["es5", "es6", "es7", "es2015", "es2016", "es2017", "es2018", "esnext"],
        "types": ["reflect-metadata", "node", "jest"],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "outDir": "dist",
        "baseUrl": "src",
        "inlineSourceMap": true,
        "inlineSources": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "paths": {
            "@dao": ["dao"],
            "@services": ["services"],
            "@dao/*": ["dao/*"],
            "@routers": ["routers"],
            "@setup": ["setup/index"],
            "@setup/*": ["setup/*"],
        }
    },
    "exclude": ["node_modules", "dist"]
}
